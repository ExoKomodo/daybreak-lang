{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Daybreak",
	"patterns": [
		{
			"include": "#declarations"
		},
		{
			"include": "#comments"
		},
		{
			"match": "end",
			"name": "keyword.control.end.daybreak"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.daybreak",
					"match": "\\b(match|return|end|let)\\b"
				}
			]
		},
		"declarations": {
			"patterns": [
				{
					"name": "meta.function.daybreak",
					"begin": "(fun)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*[(](.*)[)]\\s*(=>)\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s+(is)",
					"end": "(end)",
					"beginCaptures": {
						"1": {
							"name": "storage.type.function.daybreak"
						},
						"2": {
							"name": "entity.name.function.daybreak"
						},
						"3": {
							"patterns": [
								{
									"include": "#parameters"
								}
							]
						},
						"4": {
							"name": "arrow.daybreak"
						},
						"5": {
							"name": "entity.name.type.daybreak"
						},
						"6": {
							"name": "storage.type.function.daybreak"
						}
					},
					"endCaptures": {
						"1": {
							"patterns": [
								{
									"include": "#keywords"
								}
							]
						}
					},
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#strings"
						},
						{
							"include": "#keywords"
						},
						{
							"include": "#numbers"
						}
					]
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.daybreak",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.daybreak",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
						"name": "comment.line.daybreak",
						"match": "\\?.*"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.daybreak",
					"match": "\\b(0x[0-9a-fA-F]+|[0-9]+(\\.[0-9]+)?)\\b"
				}
			]
		},
		"parameters": {
			"patterns": [
				{
					"name": "variable.parameter.daybreak",
					"match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*([a-zA-Z_][a-zA-Z0-9_]*",
					"captures": {
						"1": {
							"name": "variable.parameter.daybreak"
						},
						"2": {
							"name": "entity.name.type.daybreak"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.day"
}