{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Daybreak",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#functionDeclarations"
		},
		{
			"include": "#typeDeclarations"
		}
	],
	"repository": {
		"controlStatements": {
			"patterns": [
				{
					"begin": "(match)\\s+",
					"end": "(end)",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.daybreak"
						}
					},
					"patterns": [
						{
							"include": "#expressions"
						}
					],
					"endCaptures": {
						"1": {
							"name": "keyword.control.daybreak"
						}
					}
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.daybreak",
					"match": "\\b(return)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.daybreak",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.daybreak",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
						"name": "comment.line.daybreak",
						"match": "\\?.*"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.daybreak",
					"match": "\\b(0x[0-9a-fA-F]+|[0-9]+(\\.[0-9]+)?)\\b"
				}
			]
		},
		"expressions": {
			"patterns": [
				{
					"begin": "(\\()\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*",
					"end": "(\\))",
					"beginCaptures": {
						"2": {
							"name": "entity.name.function.daybreak",
							"patterns": [
								{
									"include": "#identifiers"
								}
							]
						}
					},
					"patterns": [
						{
							"include": "#expressions"
						}
					]
				},
				{
					"begin": "({)\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*",
					"end": "(})",
					"beginCaptures": {
						"2": {
							"name": "entity.name.function.daybreak",
							"patterns": [
								{
									"include": "#identifiers"
								}
							]
						}
					},
					"patterns": [
						{
							"match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(<-)\\s*(.*)\\s*",
							"captures": {
								"1": {
									"name": "entity.name.daybreak",
									"patterns": [
										{
											"include": "#identifiers"
										}
									]
								},
								"3": {
									"patterns": [
										{
											"include": "#expressions"
										}
									]
								}
							}
						}
					]
				},
				{
					"name": "variable.name.daybreak",
					"include": "#identifiers"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#strings"
				}
			]
		},
		"fieldDeclarations": {
			"patterns": [
				{
					"match": "([a-zA-Z_][a-zA-Z_0-9]*)\\s*(:)\\s*([a-zA-Z_][a-zA-Z_0-9<>]*)$",
					"captures": {
						"1": {
							"name": "entity.name.daybreak"
						},
						"2": {
							"name": "punctuation.separator.type.daybreak"
						},
						"3": {
							"name": "storage.type.daybreak"
						}
					}
				}
			]
		},
		"functionDeclarations": {
			"patterns": [
				{
					"begin": "^(fun)\\s+([a-zA-Z_][a-zA-Z_0-9]*)\\s*(\\()(.*)(\\))\\s*([a-zA-Z_][a-zA-Z_0-9]*)\\s+(is)\\s*",
					"end": "(end)",
					"beginCaptures": {
						"1": {
							"name": "storage.daybreak"
						},
						"2": {
							"name": "entity.name.type.daybreak"
						},
						"3": {
							"name": "storage.type.daybreak"
						},
						"4": {
							"patterns": [
								{
									"include": "#fieldDeclarations"
								}
							]
						},
						"5": {
							"name": "storage.type.daybreak"
						},
						"6": {
							"name": "entity.name.type.daybreak"
						},
						"7": {
							"name": "keyword.other.daybreak"
						}
					},
					"patterns": [
						{
							"include": "#keywords"
						},
						{
							"include": "#variableBindings"
						},
						{
							"include": "#controlStatements"
						},
						{
							"include": "#expressions"
						},
						{
							"include": "#comments"
						}
					],
					"endCaptures": {
						"1": {
							"name": "keyword.control.daybreak"
						}
					}
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"match": "([a-zA-Z_][a-zA-Z_0-9]*)"
				}
			]
		},
		"typeDeclarations": {
			"patterns": [
				{
					"begin": "^(type)\\s+([a-zA-Z_][a-zA-Z_0-9]*)\\s+(struct|union)\\s+(is)$",
					"end": "(end)",
					"beginCaptures": {
						"1": {
							"name": "storage.daybreak"
						},
						"2": {
							"name": "entity.name.type.daybreak"
						},
						"3": {
							"name": "storage.type.daybreak"
						},
						"4": {
							"name": "keyword.other.daybreak"
						}
					},
					"patterns": [
						{
							"include": "#fieldDeclarations"
						}
					],
					"endCaptures": {
						"1": {
							"name": "keyword.control.daybreak"
						}
					}
				}
			]
		},
		"variableBindings": {
			"patterns": [
				{
					"match": "(let)\\s+([a-zA-Z_][a-zA-Z_0-9]*)\\s*(:)\\s*([a-zA-Z_][a-zA-Z_0-9<>]*)\\s*(<-)\\s*",
					"captures": {
						"1": {
							"name": "storage.daybreak"
						},
						"2": {
							"name": "entity.name.daybreak"
						},
						"3": {
							"name": "punctuation.separator.type.daybreak"
						},
						"4": {
							"name": "storage.type.daybreak"
						},
						"5": {
							"name": "punctuation.separator.type.daybreak"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.day"
}